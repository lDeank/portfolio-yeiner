          <MYSQL class="size-12 mb-2" /><span class="text-sm">MySQL</span>
        </li>
      </ul>
    </div>
  </div>

  <!-- Card 3: Aprendiendo -->
  <div
    class="card relative overflow-hidden rounded-2xl
           bg-red-900 dark:bg-red-950
           shadow-2xl border dark:border-neutral-900
           hover:shadow-lg transition-shadow duration-300"
  >
    <div
      class="light-effect absolute w-56 h-56
             bg-gradient-to-r from-blue-900 to-red-900
             dark:from-blue-950 dark:to-red-950
             rounded-full opacity-0 blur-3xl transform
             -translate-x-1/2 -translate-y-1/2
             pointer-events-none transition-opacity duration-300"
