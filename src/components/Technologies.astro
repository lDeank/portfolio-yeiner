      <ul class="grid grid-cols-3 gap-4">
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <Docker class="size-12 mb-2" /><span class="text-sm">Docker</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <MicrosoftAzure class="size-12 mb-2" /><span class="text-sm">Microsoft Azure</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <GoogleCloud class="size-12 mb-2" /><span class="text-sm">Google Cloud</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <Angular class="size-12 mb-2" /><span class="text-sm">Angular</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <AWS class="size-12 mb-2" /><span class="text-sm">AWS</span>
        </li>
      </ul>
    </div>
  </div>

  <!-- Card 4: Herramientas -->
  <div
    class="card relative overflow-hidden rounded-2xl
           bg-red-900 dark:bg-red-950
           shadow-2xl border dark:border-neutral-900
           hover:shadow-lg transition-shadow duration-300"
  >
    <div
      class="light-effect absolute w-56 h-56
             bg-gradient-to-r from-blue-900 to-red-900
             dark:from-blue-950 dark:to-red-950
             rounded-full opacity-0 blur-3xl transform
             -translate-x-1/2 -translate-y-1/2
             pointer-events-none transition-opacity duration-300"
    ></div>

    <div class="p-6 relative">
      <h3
        class="text-center mb-8 text-xl font-bold lg:text-4xl
               bg-gradient-to-t from-[#54fbff] to-[#00a4c9]
               dark:from-[#c9fffe] dark:to-[#00cfef]
               bg-clip-text text-transparent"
      >
        Herramientas
      </h3>
      <ul class="grid grid-cols-3 gap-4">
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <Git class="size-12 mb-2" /><span class="text-sm">Git</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <Github class="size-12 mb-2" /><span class="text-sm">GitHub</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <WordPress class="size-12 mb-2" /><span class="text-sm">WordPress</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <Linux class="size-12 mb-2" /><span class="text-sm">Linux</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <Figma class="size-12 mb-2" /><span class="text-sm">Figma</span>
        </li>
        <li class="rounded-2xl group flex flex-col justify-center items-center">
          <ChatGPT class="size-12 mb-2" /><span class="text-sm">ChatGPT</span>
        </li>
      </ul>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll(".card").forEach((card) => {
    const lightEffect = card.querySelector(".light-effect");
    card.addEventListener("mousemove", (e) => {
      const rect = card.getBoundingClientRect();
      lightEffect.style.left = `${e.clientX - rect.left}px`;
      lightEffect.style.top = `${e.clientY - rect.top}px`;
      lightEffect.style.opacity = "0.8";
    });
    card.addEventListener("mouseleave", () => {
      lightEffect.style.opacity = "0";
    });
  });
</script>
